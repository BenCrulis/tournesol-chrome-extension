{
  "name": "Tournesol Extension",
  "version": "1.6",
  "description": "Open Tournesol directly from Youtube",
  "permissions": ["cookies", "https://tournesol.app/", "https://www.youtube.com/", "contextMenus", "activeTab"],
  "manifest_version": 2,
  "icons": {
    "64": "favicon64.png",
    "512": "favicon512.png"
  },
  "background": {
    "scripts": ["utils.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "menu.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["addTournesolRecommendations.js", "addRateLaterButton.js"],
      "css": ["addTournesolRecommendations.css", "addRateLaterButton.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
	  "rate_now_icon.png",
	  "utils.mjs"
  ]
}
